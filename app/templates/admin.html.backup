{% extends "layout.html" %}
{% block title %}Админ-панель | AI Developer Portal{% endblock %}
{% block content %}
<div class="min-h-screen bg-gray-100">
    <!-- Верхняя панель -->
    <header class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-crown text-2xl text-yellow-500"></i>
                    </div>
                    <div class="ml-3">
                        <h1 class="text-2xl font-bold text-gray-900">Панель администратора</h1>
                        <p class="text-sm text-gray-500">AI Developer Portal</p>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="text-right">
                        <p class="text-sm font-medium text-gray-900">{{ current_user.name if current_user else "Гость" }}</p>
                        <p class="text-xs text-gray-500">{{ current_user.email if current_user else "admin@example.com" }}</p>
                    </div>
                    <button id="theme-toggle" class="p-2 rounded-lg bg-gray-200 hover:bg-gray-300">
                        <i class="fas fa-moon"></i>
                    </button>
                    <a href="/api/auth/logout"
                       class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition flex items-center">
                        <i class="fas fa-sign-out-alt mr-2"></i>Выход
                    </a>
                </div>
            </div>
        </div>
    </header>
    <!-- Основной контент -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Статистика системы -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Карточки статистики будут заполнены JavaScript -->
        </div>
        <!-- Блок основных инструментов -->
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Боковая панель навигации -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-xl shadow-lg p-4 sticky top-8">
                    <h2 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-bars mr-2"></i>Навигация
                    </h2>
                    <nav class="space-y-2">
                        <button data-tab="users" class="tab-btn w-full text-left px-4 py-3 rounded-lg hover:bg-gray-100 transition flex items-center text-blue-600 bg-blue-50">
                            <i class="fas fa-users mr-3"></i> Пользователи
                        </button>
                        <button data-tab="projects" class="tab-btn w-full text-left px-4 py-3 rounded-lg hover:bg-gray-100 transition flex items-center">
                            <i class="fas fa-project-diagram mr-3"></i> Проекты
                        </button>
                        <button data-tab="payments" class="tab-btn w-full text-left px-4 py-3 rounded-lg hover:bg-gray-100 transition flex items-center">
                            <i class="fas fa-credit-card mr-3"></i> Платежи
                        </button>
                        <button data-tab="services" class="tab-btn w-full text-left px-4 py-3 rounded-lg hover:bg-gray-100 transition flex items-center">
                            <i class="fas fa-cube mr-3"></i> Услуги
                        </button>
                        <button data-tab="settings" class="tab-btn w-full text-left px-4 py-3 rounded-lg hover:bg-gray-100 transition flex items-center">
                            <i class="fas fa-cog mr-3"></i> Настройки
                        </button>
                    </nav>
                </div>
            </div>
            <!-- Основная область -->
            <div class="lg:col-span-3">
                <!-- Таблица пользователей -->
                <div id="users-tab" class="tab-content">
                    <div class="bg-white rounded-xl shadow-lg p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-gray-900">Управление пользователями</h2>
                            <div class="flex space-x-3">
                                <div class="relative">
                                    <input type="text" id="search-users" placeholder="Поиск по email..." 
                                           class="pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                                </div>
                                <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                                    <i class="fas fa-plus mr-2"></i>Добавить
                                </button>
                            </div>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead>
                                    <tr class="bg-gray-50">
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Имя</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дата регистрации</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                                    </tr>
                                </thead>
                                <tbody id="users-table-body" class="bg-white divide-y divide-gray-200">
                                    <!-- Данные будут заполнены JavaScript -->
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-4 flex justify-between items-center">
                            <div class="text-sm text-gray-700" id="users-pagination-info">
                                Показано 0 из 0
                            </div>
                            <div class="flex space-x-2" id="users-pagination">
                                <!-- Пагинация будет заполнена JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Другие вкладки (скрыты по умолчанию) -->
                <div id="projects-tab" class="tab-content hidden">
                    <!-- Контент для проектов -->
                </div>
                <div id="payments-tab" class="tab-content hidden">
                    <!-- Контент для платежей -->
                </div>
                <div id="services-tab" class="tab-content hidden">
                    <!-- Контент для услуг -->
                </div>
                <div id="settings-tab" class="tab-content hidden">
                    <!-- Контент для настроек -->
                </div>
            </div>
        </div>
    </main>
</div>
<script src="/static/js/admin.js"></script>
{% endblock %}


